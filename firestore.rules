
/**
 * @fileoverview Firestore Security Rules for the SmartLearn AI platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all user-generated
 * content. Data is nested hierarchically under `/users/{userId}` to simplify
 * security rules and ensure data isolation. A global rule for collection group
 * queries on 'lessons' is also included for AI worker processes.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows AI workers to query across all 'lessons' collections
     * for caching and validation purposes. This is a collection group query.
     * This rule must be placed at the top level to work correctly.
     */
    match /{path=**}/lessons/{lessonId} {
        allow list: if isServiceAccount() || isAIWorker();
        // Read, create, update, delete for individual documents are handled by the more specific
        // path-based rules below. This rule is ONLY for the 'list' (collectionGroup) operation.
    }
    
    /**
     * @description Allows signed-in users to write logs for AI operations.
     * This is used for debugging and monitoring AI generation failures.
     */
    match /aiLogs/{logId} {
      allow create: if isSignedIn();
      allow read, update, delete, list: if false; // Only allow creation
    }

    /**
     * @description Allows authenticated users to read and write their own user profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Users cannot list other users.
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);

      /**
       * @description Allows a user to manage their own topics.
       * @path /users/{userId}/topics/{topicId}
       */
      match /topics/{topicId} {
        allow read, list: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn() && isOwner(userId) && request.resource.data.createdBy == request.auth.uid;
        allow update, delete: if isSignedIn() && isExistingOwner(userId);

        /**
         * @description Allows a user to manage their own roadmaps within a topic.
         * AI workers are also allowed to create/update/delete roadmaps.
         * @path /users/{userId}/topics/{topicId}/roadmaps/{roadmapId}
         */
        match /roadmaps/{roadmapId} {
          allow read, list: if isSignedIn() && isOwner(userId);
          allow create, update, delete: if (isSignedIn() && isOwner(userId)) || isServiceAccount() || isAIWorker();

          /**
           * @description Allows a user to manage their own lessons within a roadmap.
           * AI workers are also allowed to create/update/delete lessons.
           * The 'list' operation is handled by the global collection group rule.
           * @path /users/{userId}/topics/{topicId}/roadmaps/{roadmapId}/lessons/{lessonId}
           */
          match /lessons/{lessonId} {
            allow read: if isSignedIn() && isOwner(userId);
            // 'list' is intentionally omitted here to allow the global collection group rule to apply.
            allow create, update, delete: if (isSignedIn() && isOwner(userId)) || isServiceAccount() || isAIWorker();

            /**
             * @description Allows a user to manage their own tests within a lesson.
             * @path /users/{userId}/topics/{topicId}/roadmaps/{roadmapId}/lessons/{lessonId}/tests/{testId}
             */
            match /tests/{testId} {
              allow read, list: if isSignedIn() && isOwner(userId);
              allow create, update, delete: if (isSignedIn() && isOwner(userId)) || isServiceAccount() || isAIWorker();
            }
          }
        }
      }

      /**
       * @description Allows a user to manage their own daily tasks.
       * @path /users/{userId}/dailyTasks/{dailyTaskId}
       */
      match /dailyTasks/{dailyTaskId} {
        allow read, list, create, update, delete: if isSignedIn() && isOwner(userId);
      }
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    function isServiceAccount() {
      return request.auth.token.admin == true ||
             request.auth.token.firebase.sign_in_provider == "service_account";
    }

    function isAIWorker() {
      // For system users like Genkit/Firebase Studio
      return request.auth.uid == "system_ai_worker" || request.auth.token.role == "ai_worker";
    }
  }
}
