
/**
 * @fileoverview Firestore Security Rules for the SmartLearn AI platform.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all user-generated
 * content (topics, roadmaps, lessons, tests, and daily tasks). Each user has
 * full control over the data they create, and no other user can access or
 * modify it. This is achieved through path-based access control.
 *
 * Data Structure:
 * All user-specific data is nested under the `/users/{userId}` path,
 * where `{userId}` corresponds to the Firebase Authentication UID. This
 * hierarchical structure simplifies the security rules and ensures that
 * data is isolated and protected. The 'createdBy' field is denormalized from
 * Topic into Roadmap and Lesson entities.
 *
 * Key Security Decisions:
 * - User listing is disallowed to protect user privacy.
 * - All write operations require a valid, authenticated user.
 * - All write operations on user-owned data require that the authenticated
 *   user's UID matches the `userId` in the path.
 *
 * Denormalization for Authorization:
 * The `createdBy` field is denormalized from the Topic entity into the
 * Roadmap and Lesson entities. This allows for faster and more efficient
 * security rules by eliminating the need for `get()` calls to retrieve the
 * topic creator's ID.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows authenticated users to read and write their own user profile.
     * @path /users/{userId}
     * @allow (create) request.auth.uid == "{userId}"
     * @allow (get, update, delete) request.auth.uid == "{userId}" && resource != null
     * @deny (create) request.auth == null
     * @deny (update, delete) request.auth.uid != "{userId}" || resource == null
     * @deny list
     * @principle Enforces document ownership for writes and restricts reads to the owner.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own topics.
     * @path /users/{userId}/topics/{topicId}
     * @allow (create) request.auth.uid == "{userId}"
     * @allow (get, update, delete) request.auth.uid == "{userId}" && resource != null
     * @deny (create) request.auth == null
     * @deny (update, delete) request.auth.uid != "{userId}" || resource == null
     * @principle Enforces document ownership for writes and restricts reads to the owner.
     */
    match /users/{userId}/topics/{topicId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.createdBy == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own roadmaps within a topic.
     * @path /users/{userId}/roadmaps/{roadmapId}
     * @allow (create) request.auth.uid == "{userId}"
     * @allow (get, update, delete) request.auth.uid == "{userId}" && resource != null
     * @deny (create) request.auth == null
     * @deny (update, delete) request.auth.uid != "{userId}" || resource == null
     * @principle Enforces document ownership for writes and restricts reads to the owner.
     */
    match /users/{userId}/roadmaps/{roadmapId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own lessons within a roadmap.
     * @path /users/{userId}/roadmaps/{roadmapId}/lessons/{lessonId}
     * @allow (create) request.auth.uid == "{userId}"
     * @allow (get, update, delete) request.auth.uid == "{userId}" && resource != null
     * @deny (create) request.auth == null
     * @deny (update, delete) request.auth.uid != "{userId}" || resource == null
     * @principle Enforces document ownership for writes and restricts reads to the owner.
     */
    match /users/{userId}/roadmaps/{roadmapId}/lessons/{lessonId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own tests within a lesson.
     * @path /users/{userId}/lessons/{lessonId}/tests/{testId}
     * @allow (create) request.auth.uid == "{userId}"
     * @allow (get, update, delete) request.auth.uid == "{userId}" && resource != null
     * @deny (create) request.auth == null
     * @deny (update, delete) request.auth.uid != "{userId}" || resource == null
     * @principle Enforces document ownership for writes and restricts reads to the owner.
     */
    match /users/{userId}/lessons/{lessonId}/tests/{testId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Allows a user to manage their own daily tasks.
     * @path /users/{userId}/dailyTasks/{dailyTaskId}
     * @allow (create) request.auth.uid == "{userId}"
     * @allow (get, update, delete) request.auth.uid == "{userId}" && resource != null
     * @deny (create) request.auth == null
     * @deny (update, delete) request.auth.uid != "{userId}" || resource == null
     * @principle Enforces document ownership for writes and restricts reads to the owner.
     */
    match /users/{userId}/dailyTasks/{dailyTaskId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }
  }
}
